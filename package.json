{
  "name": "tudd-pekblom",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://uddekudde.github.io/tudd-pekblom/",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
